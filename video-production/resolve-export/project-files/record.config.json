{
  "app": {
    "url": "http://localhost:3000",
    "viewport": {
      "width": 3840,
      "height": 2160
    },
    "waitForSelector": "#root",
    "timeout": 30000
  },
  "beats": [
    {
      "id": "intro",
      "duration": 30,
      "actions": [
        "overlay(intro.fullscreen,in,0)",
        "overlay(title:Disaster Response Platform,in,200)",
        "overlay(subtitle:Palantir Building Challenge — Ian Frelinger,in,800)",
        "wait(2500)",
        "overlay(*,out,800)"
      ]
    },
    {
      "id": "roles",
      "duration": 30,
      "actions": [
        "goto(APP_URL)",
        "waitForSelector(#root)",
        "click(text=Commander Dashboard)",
        "wait(500)",
        "mouseMove(300,420)",
        "overlay(lowerThird:Incident Commander · Planner · Dispatcher,in,0)",
        "wait(2000)",
        "overlay(lowerThird,out,300)"
      ]
    },
    {
      "id": "api_overview",
      "duration": 40,
      "actions": [
        "overlay(diagram:assets/diagrams/api_data_flow.png,in,0)",
        "overlay(callout:Ingestion: FIRMS, NOAA, 911, Population, Traffic,in,300)",
        "overlay(callout:Processing: H3 res9, ML spread (2h), risk polygons,in,1200)",
        "overlay(callout:Delivery: React+Mapbox, WebSocket API,in,2100)",
        "overlay(chip:GET /api/hazards,in,2800)",
        "overlay(chip:GET /api/hazard_zones,in,3100)",
        "overlay(chip:POST /api/routes (A Star),in,3400)",
        "overlay(chip:GET /api/risk,in,3700)",
        "overlay(chip:GET /api/evacuations,in,4000)",
        "overlay(chip:GET/PUT /api/units,in,4300)",
        "overlay(chip:GET /api/public_safety,in,4600)",
        "wait(2500)",
        "overlay(*,out,600)"
      ]
    },
    {
      "id": "map_triage",
      "duration": 40,
      "actions": [
        "click(text=Live Map)",
        "wait(800)",
        "wheel(-120)",
        "wait(300)",
        "wheel(-120)",
        "mouseDrag(960,540,960,500)",
        "mouseClick(740,580)",
        "wait(1000)",
        "overlay(status:Risk: High · Pop. at risk ~N,in,0)",
        "wait(1200)",
        "overlay(status,out,300)"
      ]
    },
    {
      "id": "zones",
      "duration": 40,
      "actions": [
        "click(text=Commander Dashboard)",
        "wait(400)",
        "mouseMove(360,430)",
        "screenshot(captures/zoneA.png)",
        "overlay(badge:Evacuated · In Progress · Refused · No Contact,in,0)",
        "wait(2000)",
        "overlay(badge,out,300)",
        "wheel(120)",
        "wait(400)",
        "wheel(120)"
      ]
    },
    {
      "id": "route_concept",
      "duration": 40,
      "actions": [
        "click(text=Live Map)",
        "wait(500)",
        "overlay(routeOverlay:assets/diagrams/route_concept_overlay.png,in,0)",
        "overlay(routeOverlay,reveal,1200)",
        "overlay(panel:Profiles: Civilian, EMS, Fire, Police,in,1500)",
        "wait(2500)",
        "overlay(*,out,600)"
      ]
    },
    {
      "id": "ai_concept",
      "duration": 30,
      "actions": [
        "overlay(type:What happens if we lose Highway 30?,in,0)",
        "wait(1200)",
        "overlay(card:Evacuate Zone B via Route 3; stage EMS at Oak Ridge. ETA 14m.,in,0)",
        "wait(1500)",
        "overlay(*,out,500)"
      ]
    },
    {
      "id": "tech_deep_dive",
      "duration": 40,
      "actions": [
        "overlay(diagram:assets/diagrams/api_data_flow.png,in,0)",
        "overlay(label:H3 res9 (~174 m),in,400)",
        "overlay(label:ML spread (2 h horizon),in,800)",
        "overlay(label:Risk polygons (low/med/high/critical),in,1200)",
        "overlay(label:A Star graph, hazard penalties, vehicle constraints,in,1600)",
        "overlay(chip:hazards,hazard_zones,routes,risk,evacuations,units,public_safety,in,2000)",
        "wait(2000)",
        "overlay(*,out,600)"
      ]
    },
    {
      "id": "impact",
      "duration": 30,
      "actions": [
        "overlay(slide:assets/slides/impact_value.png,in,0)",
        "wait(2500)",
        "overlay(*,out,400)"
      ]
    },
    {
      "id": "conclusion",
      "duration": 20,
      "actions": [
        "overlay(conclusion:assets/art/conclusion.png,in,0)",
        "overlay(lowerThird:Ian Frelinger · contact@…,in,500)",
        "wait(7000)",
        "overlay(*,out,600)"
      ]
    }
  ],
  "recording": {
    "format": "webm",
    "codec": "vp9",
    "quality": "high",
    "fps": 30,
    "audio": false
  }
}

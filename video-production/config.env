# Production Video Pipeline Configuration
# This file contains all configuration options for the enhanced video pipeline

# Application Configuration
APP_URL=http://localhost:3000
WAIT_FOR_SELECTOR=#root
TIMEOUT=30000

# Recording Configuration
RECORDING_FORMAT=webm
RECORDING_CODEC=vp9
RECORDING_QUALITY=high
RECORDING_FPS=30
RECORDING_AUDIO=false

# Output Configuration
OUTPUT_DIR=./output
OUTPUT_FILENAME=production-demo-video
CLEANUP=true

# Monitoring Configuration
ENABLE_LOGGING=true
SAVE_SCREENSHOTS=false
PERFORMANCE_METRICS=true

# Browser Configuration
BROWSER_HEADLESS=false
BROWSER_VIEWPORT_WIDTH=3840
BROWSER_VIEWPORT_HEIGHT=2160

# Video Processing Configuration
VIDEO_CODEC=libx264
VIDEO_PRESET=slow
VIDEO_CRF=18
AUDIO_CODEC=aac
AUDIO_BITRATE=192k

# Overlay Configuration
OVERLAY_ENABLED=true
OVERLAY_Z_INDEX=10000
OVERLAY_ANIMATION_DURATION=500

# Error Handling Configuration
CONTINUE_ON_BEAT_FAILURE=true
MAX_RETRY_ATTEMPTS=3
RECOVERY_ENABLED=true

# Performance Configuration
ACTION_DELAY=100
BEAT_TIMEOUT_MULTIPLIER=1.5
SCREENSHOT_QUALITY=90

# Asset Configuration
ASSETS_DIR=./assets
DIAGRAMS_DIR=./assets/diagrams
SLIDES_DIR=./assets/slides
ART_DIR=./assets/art

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/pipeline.log
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=5


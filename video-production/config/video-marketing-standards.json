{
  "metadata": {
    "description": "Video marketing standards for fire-incident app demo based on recruiter feedback and industry best practices",
    "version": "1.0.0",
    "lastUpdated": "2024-01-01T00:00:00.000Z",
    "sources": [
      "Atlassian demo best practices",
      "Wyzowl video marketing guidelines",
      "UserGuiding demo standards",
      "Recruiter feedback and requirements"
    ]
  },
  "audienceAndPersona": {
    "required": true,
    "weight": 0.20,
    "standards": {
      "personalIntroduction": {
        "required": true,
        "duration": {
          "min": 5,
          "max": 15,
          "target": 10
        },
        "elements": [
          "Personal introduction and background",
          "Clear definition of target persona",
          "Understanding of viewer's role and challenges"
        ]
      },
      "personaDefinition": {
        "required": true,
        "personas": [
          "Incident Commander",
          "Dispatch Operator",
          "Field Unit",
          "Emergency Coordinator"
        ],
        "problemStatement": {
          "required": true,
          "examples": [
            "Wildfires requiring rapid situational awareness",
            "Multiple incident coordination",
            "Real-time resource allocation",
            "Emergency response optimization"
          ]
        }
      },
      "audienceEmpathy": {
        "required": true,
        "elements": [
          "Demonstrate understanding of viewer's goals",
          "Address viewer's limitations and challenges",
          "Show relevance to their daily operations"
        ]
      }
    }
  },
  "narrativeStructure": {
    "required": true,
    "weight": 0.25,
    "standards": {
      "storyArc": {
        "required": true,
        "structure": [
          "Problem identification",
          "User persona introduction",
          "Technical architecture overview",
          "Live walk-through demonstration",
          "Decision-making process",
          "Value and impact demonstration",
          "Call to action"
        ],
        "narrativeFlow": "problem → solution → value → action"
      },
      "problemSolutionValue": {
        "required": true,
        "elements": [
          "Clear problem statement",
          "Software solution demonstration",
          "Tangible benefits and outcomes"
        ]
      },
      "userJourney": {
        "required": true,
        "elements": [
          "What decisions users need to make",
          "How the app empowers decision-making",
          "Real-world application scenarios"
        ]
      }
    }
  },
  "softwareDemonstration": {
    "required": true,
    "weight": 0.25,
    "standards": {
      "featureDemonstration": {
        "required": true,
        "coreFeatures": [
          "Interactive map functionality",
          "Dashboard overviews",
          "Hazard identification and clicking",
          "Route planning and optimization",
          "Real-time data visualization"
        ],
        "demonstrationStyle": "step-by-step with clear narration"
      },
      "cursorMovement": {
        "required": true,
        "standards": [
          "Natural, human-like cursor movements",
          "Timeline-synchronized actions",
          "Clear visual feedback for each action"
        ]
      },
      "overlaysAndCallouts": {
        "required": true,
        "elements": [
          "Lower thirds for feature names",
          "Callouts for key UI elements",
          "Progress indicators",
          "Feature highlights"
        ],
        "placement": "Safe margins, no UI obstruction"
      },
      "pacing": {
        "required": true,
        "targetDuration": {
          "shortDemo": "1-2 minutes",
          "detailedDemo": "3-5 minutes",
          "comprehensiveDemo": "5-7 minutes"
        },
        "rhythm": "Balanced pace with natural pauses"
      }
    }
  },
  "productionQuality": {
    "required": true,
    "weight": 0.20,
    "standards": {
      "visualQuality": {
        "required": true,
        "resolution": "1920x1080 minimum",
        "framerate": "30fps minimum",
        "bitrate": "2000kbps minimum",
        "transitions": "Smooth, professional transitions"
      },
      "audioQuality": {
        "required": true,
        "voiceover": "-16 LUFS",
        "musicDucking": "-6 to -9 dB",
        "clarity": "Clear, professional narration",
        "synchronization": "Perfect audio-video sync"
      },
      "graphicsAndOverlays": {
        "required": true,
        "elements": [
          "Consistent color palette",
          "Professional typography",
          "Engaging visual elements",
          "Brand-consistent graphics"
        ],
        "captions": "Timed and synchronized"
      }
    }
  },
  "technologyMention": {
    "required": true,
    "weight": 0.10,
    "standards": {
      "foundryIntegration": {
        "required": true,
        "mention": "Explicitly name-drop Foundry",
        "technicalDetails": [
          "Data streaming from FIRMS, NOAA, 911 feeds",
          "Foundry data ingestion and processing",
          "H3 geospatial processing",
          "Machine learning integration",
          "REST API endpoints"
        ]
      },
      "architectureExplanation": {
        "required": true,
        "elements": [
          "Data flow explanation",
          "Platform value demonstration",
          "Technical capabilities overview"
        ]
      }
    }
  },
  "callToAction": {
    "required": true,
    "weight": 0.10,
    "standards": {
      "ctaElements": {
        "required": true,
        "elements": [
          "Clear next steps",
          "Invitation to try the app",
          "Schedule deeper discussion",
          "Contact information"
        ]
      },
      "ctaStyle": {
        "required": true,
        "characteristics": [
          "Compelling and specific",
          "Action-oriented language",
          "Professional tone",
          "Easy to follow up on"
        ]
      }
    }
  },
  "qualityThresholds": {
    "overallScore": 90,
    "audienceAndPersona": 85,
    "narrativeStructure": 90,
    "softwareDemonstration": 90,
    "productionQuality": 85,
    "technologyMention": 95,
    "callToAction": 90
  },
  "scoringWeights": {
    "audienceAndPersona": 0.20,
    "narrativeStructure": 0.25,
    "softwareDemonstration": 0.25,
    "productionQuality": 0.20,
    "technologyMention": 0.10,
    "callToAction": 0.10
  },
  "validationRules": {
    "criticalElements": [
      "Personal introduction and persona definition",
      "Problem-solution-value narrative structure",
      "Live software demonstration",
      "Foundry technology mention",
      "Clear call to action"
    ],
    "automaticFailures": [
      "Missing personal introduction",
      "No Foundry mention",
      "No call to action",
      "Poor audio quality",
      "Unclear narrative structure"
    ]
  },
  "bestPractices": {
    "atlassianGuidelines": [
      "Know your audience and their goals",
      "Understand viewer limitations",
      "Tailor demo to specific persona",
      "Humanize the presentation"
    ],
    "wyzowlGuidelines": [
      "Start with audience problem",
      "Show software solving the problem",
      "Wrap up with benefits",
      "Include compelling call to action"
    ],
    "userguidingGuidelines": [
      "1-2 minutes for short demos",
      "Longer if depth is required",
      "Always be concise",
      "Focus on problem-solving features"
    ],
    "recruiterRequirements": [
      "Name-drop Foundry explicitly",
      "Show technical architecture",
      "Demonstrate live functionality",
      "Highlight decision-making process",
      "End with strong call to action"
    ]
  }
}

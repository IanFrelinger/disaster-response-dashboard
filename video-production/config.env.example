# Video Pipeline Configuration
# Copy this file to config.env and fill in your actual API keys

# OpenAI TTS (Required for narrate:openai)
OPENAI_API_KEY=your_openai_api_key_here

# ElevenLabs TTS (Required for narrate:eleven)
ELEVEN_API_KEY=your_elevenlabs_api_key_here
ELEVEN_VOICE_ID=21m00Tcm4TlvDq8ikWAM

# Azure Speech Services (Required for narrate:azure)
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=eastus

# Loudly API (Required for genmusic)
LOUDLY_API_KEY=your_loudly_api_key_here

# YouTube Upload (Required for submit)
# You'll need to create client_secrets.json from Google Cloud Console
YT_CLIENT_SECRETS=./client_secrets.json
YT_TOKEN=./token.json

# Optional: Mubert API for alternative music generation
MUBERT_TOKEN=your_mubert_token_here

# Optional: Stability AI for alternative music generation
STABILITY_API_KEY=your_stability_api_key_here

# Local TTS (Piper) - no API key needed
# Just ensure piper binary and voice models are installed

# Recording Configuration
RECORDING_QUALITY=high
RECORDING_FPS=30
RECORDING_CODEC=vp9

# Output Configuration
OUTPUT_FORMAT=mp4
OUTPUT_CODEC=libx264
OUTPUT_QUALITY=high
OUTPUT_RESOLUTION=1920x1080

# Audio Processing
AUDIO_SAMPLE_RATE=44100
AUDIO_BIT_DEPTH=16
AUDIO_CHANNELS=1
AUDIO_TARGET_LUFS=-23.0

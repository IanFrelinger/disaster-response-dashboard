{
  "name": "disaster-response-video-production",
  "version": "1.0.0",
  "description": "Video production tools for Disaster Response Dashboard demo",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "narrate": "node scripts/narrate.js",
    "assemble": "node scripts/assemble.js",
    "final": "node scripts/final.js",
    "build": "npm run narrate && npm run assemble && npm run final",
    "dev": "node scripts/dev.js",
    "test": "node scripts/test.js",
    "validate": "node scripts/validate.js",
    "validate:visual": "node scripts/visual-validator.js",
    "validate:content": "node scripts/content-validator.js",
    "validate:comprehensive": "node scripts/comprehensive-validator.js",
    "validate:quick": "node scripts/quick-validate.js",
    "test:integration": "node scripts/test-integration.js",
    "test:validation": "node scripts/test-validation.js",
    "build-and-validate": "npm run build && npm run validate:comprehensive",
    "test:full": "npm run test:integration && npm run validate:comprehensive",
    "clean": "rm -rf output/* temp/*",
    "screenshots": "cd ../frontend && node scripts/comprehensive-screenshots.js",
    "storyboard": "node scripts/video-storyboard-generator.js",
    "tts": "node scripts/ai-tts-generator.js",
    "animatic": "node scripts/animatic-generator.js",
            "validate:complete": "node scripts/complete-validation.js",
        "validate:quicktime": "node scripts/quicktime-validator.js",
        "verify:transitions": "node scripts/transition-verifier.js",
        "extract:frames": "node scripts/frame-extractor.js",
        "from-md": "node scripts/md-to-config.js",
        "test:parser": "node scripts/test-md-parser.js",
        "narrate": "node scripts/ai-tts-generator.js",
        "record": "node scripts/animatic-generator.js",
        "assemble": "node scripts/assemble-video.js",
        "final": "node scripts/finalize-video.js",
        "feedback": "node scripts/feedback-pipeline.js",
        "approve": "node scripts/approve.js",
        "reject": "node scripts/reject.js",
        "submit": "npm run feedback && echo 'Video ready for approval. Run: npm run approve'",
        "pipeline:new": "npm run from-md && npm run narrate && npm run record && npm run assemble && npm run final && npm run submit",
    "pipeline": "npm run screenshots && npm run storyboard && npm run tts && npm run animatic && npm run validate:complete",
    "pipeline:full": "npm run screenshots && npm run storyboard && npm run tts && npm run animatic && cd output/animatic && ./generate-animatic.sh && cd ../.. && npm run validate:complete",
    "build:pipeline": "node scripts/build-pipeline.js"
  },
  "dependencies": {
    "yaml": "^2.3.4",
    "openai": "^4.20.1",
    "elevenlabs-node": "^1.0.0",
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "ora": "^7.0.1",
    "inquirer": "^9.2.12",
    "fs-extra": "^11.1.1",
    "path": "^0.12.7",
    "glob": "^10.3.10"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "nodemon": "^3.0.2"
  },
  "keywords": [
    "video",
    "narration",
    "tts",
    "ffmpeg",
    "disaster-response",
    "animatic",
    "ai-tts"
  ],
  "author": "Disaster Response Team",
  "license": "MIT"
}

{
  "name": "disaster-response-video-production",
  "version": "1.0.0",
  "description": "Headless Autopilot Video Pipeline for Disaster Response Dashboard",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "narrate": "python3 scripts/tts_providers.py narration.yaml timeline.yaml --fit-to-beat",
    "narrate:openai": "python3 scripts/tts_providers.py narration.yaml timeline.yaml --provider openai --fit-to-beat",
    "narrate:eleven": "python3 scripts/tts_providers.py narration.yaml timeline.yaml --provider elevenlabs --fit-to-beat",
    "narrate:azure": "python3 scripts/tts_providers.py narration.yaml timeline.yaml --provider azure --fit-to-beat",
    "narrate:piper": "python3 scripts/tts_providers.py narration.yaml timeline.yaml --provider piper --fit-to-beat",
    "record": "tsx scripts/record.ts",
    "assemble": "node scripts/assemble.js",
    "final": "node scripts/assemble.js --final",
    "submit": "python3 scripts/yt_upload.py out/final.mp4 --privacy unlisted --out out/submission.txt",
    "pipeline:full": "pnpm narrate:eleven && pnpm record && pnpm assemble && pnpm final && pnpm submit",
    "pipeline:local": "pnpm narrate:eleven && pnpm record && pnpm assemble && pnpm final",
    "setup": "npx playwright install chromium && pip install -r requirements.txt",
    "preflight": "node scripts/preflight.js",
    "validate:api": "node scripts/validate-api-keys.js",
    "setup:docker": "./scripts/setup-docker-api-keys.sh",
    "verify:recording": "node scripts/verify-recording.js",
    "test:errors": "node scripts/test-error-handling.js",
    "help": "echo 'Available commands: narrate, record, assemble, final, submit, pipeline:full, pipeline:local, setup, preflight, validate:api, setup:docker, verify:recording, test:errors'"
  },
  "dependencies": {
    "yaml": "^2.3.4",
    "openai": "^4.20.1",
    "elevenlabs-node": "^1.0.0",
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "ora": "^7.0.1",
    "inquirer": "^9.2.12",
    "fs-extra": "^11.1.1",
    "path": "^0.12.7",
    "glob": "^10.3.10",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "nodemon": "^3.0.2",
    "playwright": "^1.40.0",
    "typescript": "^5.3.0",
    "tsx": "^4.6.0",
    "ts-node": "^10.9.1",
    "zod": "^3.22.0"
  },
  "keywords": [
    "video",
    "narration",
    "tts",
    "ffmpeg",
    "disaster-response",
    "headless-pipeline",
    "playwright",
    "opentimelineio",
    "youtube-upload"
  ],
  "author": "Disaster Response Team",
  "license": "MIT"
}

# Disaster Response Dashboard - Backend Environment Configuration
# Copy this file to .env and fill in your actual API keys

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================
FLASK_ENV=development
FLASK_DEBUG=true
SECRET_KEY=your-secret-key-here-change-in-production
LOG_LEVEL=INFO

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://username:password@localhost:5432/disaster_response
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=disaster_response
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-database-password

# =============================================================================
# REDIS CONFIGURATION (for caching and real-time updates)
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# =============================================================================
# FOUNDRY CONFIGURATION
# =============================================================================
FOUNDRY_URL=https://your-foundry-instance.palantirfoundry.com
FOUNDRY_USERNAME=your-foundry-username
FOUNDRY_PASSWORD=your-foundry-password
FOUNDRY_TOKEN=your-foundry-token

# =============================================================================
# EXTERNAL API KEYS
# =============================================================================

# NASA FIRMS API (Fire Information for Resource Management System)
NASA_FIRMS_API_KEY=your-nasa-firms-api-key
NASA_FIRMS_BASE_URL=https://firms.modaps.eosdis.nasa.gov/api

# NOAA Weather API
NOAA_API_KEY=your-noaa-api-key
NOAA_BASE_URL=https://api.weather.gov

# Mapbox API (for mapping services)
MAPBOX_ACCESS_TOKEN=your-mapbox-access-token
MAPBOX_STYLE_URL=mapbox://styles/mapbox/dark-v11

# OpenStreetMap API (fallback mapping)
OSM_BASE_URL=https://api.openstreetmap.org

# =============================================================================
# EMERGENCY SERVICES INTEGRATION
# =============================================================================

# Emergency 911 API
EMERGENCY_911_API_KEY=your-911-api-key
EMERGENCY_911_BASE_URL=https://api.911.gov

# FEMA API
FEMA_API_KEY=your-fema-api-key
FEMA_BASE_URL=https://api.fema.gov

# National Weather Service API
NWS_API_KEY=your-nws-api-key
NWS_BASE_URL=https://api.weather.gov

# =============================================================================
# COMMUNICATION SERVICES
# =============================================================================

# Twilio (for SMS alerts)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# SendGrid (for email alerts)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=alerts@disaster-response.gov

# =============================================================================
# MACHINE LEARNING & AI SERVICES
# =============================================================================

# Google Cloud AI (for ML predictions)
GOOGLE_CLOUD_PROJECT_ID=your-gcp-project-id
GOOGLE_CLOUD_CREDENTIALS_FILE=path/to/service-account.json

# AWS AI Services (alternative)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-west-2

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Prometheus (for metrics)
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Sentry (for error tracking)
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development

# =============================================================================
# SECURITY & ENCRYPTION
# =============================================================================

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=86400

# Encryption Keys
ENCRYPTION_KEY=your-32-character-encryption-key
DATA_ENCRYPTION_KEY=your-data-encryption-key

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Docker Configuration
DOCKER_REGISTRY=your-docker-registry
DOCKER_IMAGE_TAG=latest

# Load Balancer
LOAD_BALANCER_HOST=localhost
LOAD_BALANCER_PORT=80

# SSL/TLS Configuration
SSL_CERT_FILE=path/to/ssl/cert.pem
SSL_KEY_FILE=path/to/ssl/key.pem

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Debug Settings
DEBUG_MODE=true
LOG_REQUESTS=true
ENABLE_CORS=true

# Test Configuration
TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/test_disaster_response
TEST_REDIS_URL=redis://localhost:6379/1

# Mock Data (for development)
USE_MOCK_DATA=true
MOCK_DATA_PATH=./mock_data/

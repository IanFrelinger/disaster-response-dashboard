FROM python:3.11-slim AS test

WORKDIR /app

# Install system dependencies needed for basic Python packages
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    libpq-dev \
    curl \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Install Python test dependencies directly
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir pytest pytest-cov pytest-asyncio pytest-mock pytest-xdist coverage requests python-dotenv

# Copy source code
COPY . .

# Set test environment
ENV TESTING=true
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1

# Default command runs tests
CMD ["python", "-m", "pytest", "tests/", "-v", "--tb=short"]

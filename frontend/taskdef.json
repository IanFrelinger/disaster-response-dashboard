{
  "family": "disaster-response-frontend",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::910230629863:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::910230629863:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "disaster-response-frontend",
      "image": "IMAGE1_NAME",
      "cpu": 256,
      "memory": 512,
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8080,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "VITE_APP_ENV",
          "value": "production"
        },
        {
          "name": "VITE_MAPBOX_ACCESS_TOKEN",
          "value": "pk.eyJ1IjoiaWNmcmVsaW5nZXIiLCJhIjoiY21ldW5zZjJuMDh0eDJpcHgwNHhtOTE4aSJ9.2k1N7W2zZovOnRuqlVB9NQ"
        },
        {
          "name": "VITE_MAPBOX_STYLE_URL",
          "value": "mapbox://styles/mapbox/dark-v11"
        },
        {
          "name": "VITE_DEBUG_MODE",
          "value": "false"
        },
        {
          "name": "VITE_BUILD_ENV",
          "value": "production"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/disaster-response-frontend",
          "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:8080/health || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      },
      "ulimits": [
        {
          "name": "nofile",
          "softLimit": 65536,
          "hardLimit": 65536
        }
      ]
    }
  ]
}

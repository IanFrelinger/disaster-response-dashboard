# Disaster Response Dashboard - Frontend Environment Configuration
# Copy this file to .env.local and fill in your actual API keys

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================
VITE_APP_NAME=Disaster Response Dashboard
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=development
VITE_DEBUG_MODE=true

# =============================================================================
# API ENDPOINTS
# =============================================================================

# Backend API Configuration
VITE_API_BASE_URL=http://localhost:5001
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3

# WebSocket Configuration
VITE_WS_URL=ws://localhost:5001/ws
VITE_WS_RECONNECT_INTERVAL=5000

# =============================================================================
# MAPPING SERVICES
# =============================================================================

# Mapbox Configuration (Primary mapping service)
VITE_MAPBOX_ACCESS_TOKEN=your-mapbox-access-token-here
VITE_MAPBOX_STYLE_URL=mapbox://styles/mapbox/dark-v11
VITE_MAPBOX_ACCOUNT=your-mapbox-account

# OpenStreetMap Configuration (Fallback)
VITE_OSM_TILE_URL=https://tile.openstreetmap.org/{z}/{x}/{y}.png
VITE_OSM_ATTRIBUTION=© OpenStreetMap contributors

# Tile Server Configuration (for demo mode)
VITE_TILE_SERVER_URL=http://localhost:8080
VITE_TILE_SERVER_ATTRIBUTION=© Disaster Response Dashboard
VITE_PMTILES_URL=http://localhost:8081

# =============================================================================
# EXTERNAL SERVICE INTEGRATIONS
# =============================================================================

# NASA FIRMS API (for fire detection data)
VITE_NASA_FIRMS_API_KEY=your-nasa-firms-api-key
VITE_NASA_FIRMS_BASE_URL=https://firms.modaps.eosdis.nasa.gov/api

# NOAA Weather API
VITE_NOAA_API_KEY=your-noaa-api-key
VITE_NOAA_BASE_URL=https://api.weather.gov

# Emergency Services API
VITE_EMERGENCY_API_KEY=your-emergency-api-key
VITE_EMERGENCY_BASE_URL=https://api.emergency.gov

# =============================================================================
# COMMUNICATION SERVICES
# =============================================================================

# Twilio (for SMS notifications)
VITE_TWILIO_ACCOUNT_SID=your-twilio-account-sid
VITE_TWILIO_AUTH_TOKEN=your-twilio-auth-token
VITE_TWILIO_PHONE_NUMBER=+1234567890

# SendGrid (for email notifications)
VITE_SENDGRID_API_KEY=your-sendgrid-api-key
VITE_SENDGRID_FROM_EMAIL=alerts@disaster-response.gov

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================

# Google Analytics
VITE_GA_TRACKING_ID=your-google-analytics-tracking-id
VITE_GA_ENABLED=true

# Sentry (for error tracking)
VITE_SENTRY_DSN=your-sentry-dsn
VITE_SENTRY_ENVIRONMENT=development
VITE_SENTRY_TRACES_SAMPLE_RATE=0.1

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT Configuration
VITE_JWT_SECRET=your-jwt-secret-key
VITE_JWT_EXPIRES_IN=3600

# OAuth Providers
VITE_GOOGLE_CLIENT_ID=your-google-oauth-client-id
VITE_GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

VITE_MICROSOFT_CLIENT_ID=your-microsoft-oauth-client-id
VITE_MICROSOFT_CLIENT_SECRET=your-microsoft-oauth-client-secret

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
VITE_ENABLE_VOICE_COMMANDS=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_PUSH_NOTIFICATIONS=true
VITE_ENABLE_FAMILY_TRACKING=true
VITE_ENABLE_MULTI_LANGUAGE=true

# =============================================================================
# PERFORMANCE & CACHING
# =============================================================================

# Cache Configuration
VITE_CACHE_DURATION=300000
VITE_OFFLINE_CACHE_SIZE=50
VITE_MAP_TILE_CACHE_SIZE=100

# Performance Settings
VITE_MAX_CONCURRENT_REQUESTS=10
VITE_REQUEST_TIMEOUT=30000
VITE_RETRY_DELAY=1000

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development Server
VITE_DEV_SERVER_PORT=3000
VITE_DEV_SERVER_HOST=localhost

# Hot Module Replacement
VITE_HMR_ENABLED=true
VITE_HMR_PORT=24678

# Mock Data (for development)
VITE_USE_MOCK_DATA=true
VITE_MOCK_DATA_PATH=./src/mocks/

# =============================================================================
# BUILD CONFIGURATION
# =============================================================================

# Build Settings
VITE_BUILD_TARGET=esnext
VITE_BUILD_MINIFY=true
VITE_BUILD_SOURCEMAP=true

# Asset Configuration
VITE_ASSETS_DIR=assets
VITE_PUBLIC_DIR=public

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Production URLs
VITE_PROD_API_URL=https://api.disaster-response.gov
VITE_PROD_WS_URL=wss://api.disaster-response.gov/ws
VITE_PROD_BASE_URL=https://disaster-response.gov

# CDN Configuration
VITE_CDN_URL=https://cdn.disaster-response.gov
VITE_ASSET_PREFIX=/

# =============================================================================
# INTERNATIONALIZATION
# =============================================================================

# Supported Languages
VITE_SUPPORTED_LANGUAGES=en,es,zh,fr,de
VITE_DEFAULT_LANGUAGE=en
VITE_FALLBACK_LANGUAGE=en

# =============================================================================
# ACCESSIBILITY
# =============================================================================

# Accessibility Settings
VITE_ENABLE_SCREEN_READER=true
VITE_ENABLE_HIGH_CONTRAST=true
VITE_ENABLE_KEYBOARD_NAVIGATION=true

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Test Settings
VITE_TEST_API_URL=http://localhost:5001/test
VITE_TEST_MODE=false
VITE_TEST_USER_EMAIL=test@disaster-response.gov
VITE_TEST_USER_PASSWORD=test-password

# =============================================================================
# ENVIRONMENT-SPECIFIC OVERRIDES
# =============================================================================

# Override settings for specific environments
# These will be automatically loaded based on NODE_ENV

# Development overrides
VITE_DEV_API_URL=http://localhost:5001
VITE_DEV_WS_URL=ws://localhost:5001/ws

# Staging overrides
VITE_STAGING_API_URL=https://staging-api.disaster-response.gov
VITE_STAGING_WS_URL=wss://staging-api.disaster-response.gov/ws

# Production overrides
VITE_PROD_API_URL=https://api.disaster-response.gov
VITE_PROD_WS_URL=wss://api.disaster-response.gov/ws

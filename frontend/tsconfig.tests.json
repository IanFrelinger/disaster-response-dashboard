{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "types": ["vitest/globals", "vite/client", "@testing-library/jest-dom"],
    "isolatedModules": true
  },
  "include": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/tests/**/*.ts",
    "src/tests/**/*.tsx",
    "src/testing/**/*.ts",
    "src/testing/**/*.tsx"
  ]
}
